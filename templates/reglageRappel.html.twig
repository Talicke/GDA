{% extends 'reglages.html.twig' %}
{% import './macro/macro.html.twig' as mac %}

{% block css %}
{{parent()}}
<link rel='stylesheet' href='./asset/style2/reglageRappel.css'>
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
{% endblock css %}

{% block script %}
    {{parent()}}
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script>

        $( function() {
            $( "#datepicker" ).datepicker({
                dayNamesMin: [ "Di", "Lu", "Ma", "Me", "Je", "Ve", "Sa" ],
                monthNames: [ "Janvier", "Fevrier", "Mars", "Avril", "Mai", "Juin", "Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Decembre" ],
                monthNamesShort: [ "Jan", "Fev", "Mar", "Avr", "Mai", "Juin", "Juil", "Aou", "Sep", "Oct", "Nov", "Dec" ],
                changeMonth: true,
                changeYear: true,
                gotoCurrent: true
            });
        } );

        $(document).ready(function(){
            $('input.timepicker1heures').timepicker({
                timeFormat: 'HH',
                interval: 15,
                minTime: '00',
                maxTime: '23:59pm',
                defaultTime: 'now',
                startTime: '00:00am',
                dynamic: false,
                dropdown: true,
                scrollbar: false
            });
        });
        
        $(document).ready(function(){
            $('input.timepicker1minutes').timepicker({
                timeFormat: 'mm',
                interval: 5,
                minTime: '10',
                maxTime: '11:00am',
                defaultTime: '11:00am',
                startTime: '10:00',
                dynamic: false,
                dropdown: true,
                scrollbar: false
            });
        });
    </script>
{% endblock script %}

{% block content %}

    {% block navireglage %}
    {{parent()}}
    {% endblock navireglage %}

<form action='' method='post' class='valoriser flex-row'>

    <div id="form-droite">
        {% block triage %}
        {{parent()}}
        {% endblock triage %}

        {% block formulaire %}
        <div id="form-bas" class="flex-row">
            {{mac.texteArea('modifNote',null, valueNote)}}
        </div>
        {% endblock formulaire %}
    </div>

    <div id="form-gauche" class="flex-col">
        <div class="datepicker-container">
            <div id="datepicker"></div>
        </div>

        <div class="timepicker-container">
            <div class="timepicker-subcontainer">
                <input class="timepicker1heures"></input>
                <p> : </p>
                <input class="timepicker1minutes"></input>
            </div>
        </div>
    </div>
</form>

<form id="validation" class="flex-row">
    <input name="valider" type="submit" value="valider" class="submit-button">
</form>

{% endblock content %}