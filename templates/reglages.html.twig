{% extends 'main.html.twig' %}

{% block css %}
{{parent()}}
<link rel="stylesheet" href="./asset/style2/reglages.css">
{% endblock css %}


{% block content %}
    {% block navireglage %}
    <form action="" method="post" id="nav-regl">
        <button class="bouton-regl" id="ong-regl-note" type="submit" name="regl-note">Note</button>
        <button class="bouton-regl" id="ong-regl-tache" type="submit" name="regl-tache">Tache</button>
        <button class="bouton-regl" id="ong-regl-rappel" type="submit" name="regl-rappel">Rappel</button>
        <button class="bouton-regl" id="ong-regl-RDV" type="submit" name="regl-RDV">RDV</button>
    </form>
    {% endblock navireglage %}

    {% block triage %}
        <div id="form-haut" class="flex-row">
            <div id="dropdown-group" class="flex-row">
                <div class='dropdown'>
                    <h3>Activités :</h3>
                    <select name='activite' id='select-acti'>
                    <option value='0'>Choisissez une activité</option>
                        {% for activite in activites %}
                            <option class="activiteDropDown" 
                            id="{{activite.nom_activite}}"
                            value='{{activite.id_activite}}'> 
                            {{activite.nom_activite}}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class='dropdown'>
                    <h3>Projets :</h3>
                    <select name='projet' id='select-proj'>
                        <option value='0'>Choisissez un projet</option>
                        {% for projet in projets %}
                            <option class="ProjetDropDown"
                            id="{{projet.nom_projet}}"
                            value='{{projet.id_projet}}'
                            idActivite="{{projet.id_activite}}">
                            {{projet.nom_projet}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div id="bouton-group" class="flex-row">
                <button type="submit" class="btn-med" id="btn-archive" name="archiver"><i class="fa-solid fa-box-archive"></i></button>
                <button type="submit" class="btn-med" id="btn-suppr" name="supprimer"><i class="fa-solid fa-trash-can"></i></button>
            </div>
        </div>
    {% endblock triage %}

    {% block javascripts %}
    {{parent()}}

        <script>
            selectedOptionDropDown("{{selectedActi}}");
            selectedOptionDropDown("{{selectedProj}}")

            changeSelecte('#select-proj', '.activiteDropDown')
        </script>
        
    {% endblock javascripts %}

    
    
{% endblock content %}
        